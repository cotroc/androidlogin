<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.cotroc.androidlogin.MainActivity">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Usuario"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintVertical_bias="0.164"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/et_user"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.382"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView3"
        app:layout_constraintRight_toLeftOf="@+id/et_pass"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="@+id/et_pass"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.772"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/et_user"
        app:layout_constraintTop_toBottomOf="@+id/et_user"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Conectar"
        android:id="@+id/btn_verify"
        android:onClick="verifyUser"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/et_pass"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-3dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nuevo"
        android:id="@+id/btn_new"
        android:onClick="newUser"
        app:layout_constraintRight_toRightOf="@+id/et_pass"
        app:layout_constraintBottom_toBottomOf="@+id/btn_verify"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/lblStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="-25dp"
        android:text="Ultimo estado"
        app:layout_constraintBottom_toTopOf="@+id/status"
        app:layout_constraintLeft_toLeftOf="@+id/status" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
